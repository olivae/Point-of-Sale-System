<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Guest">

    <StackLayout BackgroundColor="#41c8ff">
        <Label HorizontalOptions="Center" Text="Enter Information for your order" TextColor="Black"></Label>
        <Entry Placeholder="Name..." x:Name="cusName" MaxLength="30"/>
        <Entry Placeholder="Email..." x:Name="cusEmail" MaxLength="40" />
        <Entry Placeholder="Phone (Optional)..." x:Name="cusPhone" MaxLength="10" Keyboard="Numeric"/>
        
        
        <StackLayout Orientation="Horizontal">
            <Button BackgroundColor="#ff7741" TextColor="Black" HorizontalOptions="Start" VerticalOptions="End" Text="Back"
               Clicked="onBack" x:Name="button1">
            </Button>
            <Button BackgroundColor="#ff7741" TextColor="Black" HorizontalOptions="EndAndExpand" VerticalOptions="End" Text="Continue"
                Clicked="onContinue" x:Name="button2" >
            </Button>
        </StackLayout>
    </StackLayout>
</ContentPage>